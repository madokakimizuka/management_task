<h1><%= @user.name + t('view.content')%></h1>


<p>ID:<%= @user.id %></p>
<p><%= t('view.email') %>:<%= @user.email %></p>
<p><%= t('view.admin') %>:<%= @user.admin %></p>
<p><%= t('view.task') + t('view.count') %>:<%= @user.tasks.length %></p>
<table>
  <tr>
    <th><%= t('view.task') %></th>
    <th><%= t('view.content') %></th>
    <th><%= t('view.deadline') %></th>
    <th><%= t('view.status') %></th>
    <th><%= t('view.priority') %></th>

  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td class="task-index__title"><%= task.title %></td>
    <td><%= task.content %></td>
    <td><%= task.deadline %></td>
    <td><%= task.status %></td>
    <td><%= task.priority %></td>
  <tr>
<% end %>
</table>

<br>
<p><%= link_to t('view.edit'), edit_admin_user_path(@user.id) %></p>
<p><%= link_to t('view.user') + t('view.index'), admin_users_path %></p>
