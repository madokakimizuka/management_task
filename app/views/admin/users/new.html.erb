<h1><%= t('view.user') + t('view.registration') %></h1>

<%= form_with(model: [:admin, @user], local: true) do |f| %>

  <div class="user">
    <%= f.label :name %>
    <%= f.text_field :name, id: 'name' %>
  </div>

  <div class="user">
    <%= f.label :email %>
    <%= f.text_field :email, id: 'email' %>
  </div>

  <div class="user">
    <%= f.label :admin %>
    <%= f.check_box :admin, id: 'admin' %>
  </div>

  <div class="user">
    <%= f.label :password %>
    <%= f.text_field :password, id: 'password' %>
  </div>

  <div class="user">
    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation, id: 'password_confirmation' %>
  </div>

  <%= f.submit t('view.account') + t('view.create') %>
<% end %>

<%= link_to t('view.user') + t('view.index'), admin_users_path %>
