<h1><%= t('view.user') + t('view.index') %></h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th><%= t('view.name') %></th>
      <th><%= t('view.email') %></th>
      <th><%= t('view.task') + t('view.count') %></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.tasks.length %></td>
      <td><%= link_to '詳細', admin_user_path(user.id) %></td>
      <td><%= link_to '編集', edit_admin_user_path(user.id) %></td>
      <td><%= link_to '削除', admin_user_path(user.id), method: :delete, data: { confirm:  t('view.delete_confirm') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>
<%= link_to t('view.create_user'), new_admin_user_path %>
