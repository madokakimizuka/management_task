<%= form_with(model: @task, local: true) do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= @task.errors.count %><%= t('view.tell_error') %></h2>
      <ul>

      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="task_title">
    <%= form.label :title %>
    <%= form.text_field :title, id: 'task' %>
  </div>
  <div class="task_title">
    <%= form.label :content %>
    <%= form.text_field :content ,id: 'content' %>
  </div>
  <div class="task_title">
    <%= form.label :deadline %>
    <%= form.text_field :deadline ,id: 'deadline' %>
  </div>
  <div class="task_title">
    <%= form.label :priority %>
    <%= form.text_field :priority, id: 'priority' %>
  </div>
  <div class="task_title">
    <%= form.label :status %>
    <%= form.select :status, Task.statuses.keys, id: 'status' %>
  </div>

  <%= form.submit t('view.new') %>
<% end %>

<%= link_to 'タスク一覧', root_path %>
