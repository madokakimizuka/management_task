<h1>タスク一覧</h1>

<table>
  <tr>
    <th>タスク</th>
    <th>期限</th>
    <th>優先度</th>
    <th>状態</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.deadline %></td>
    <td><%= task.priority %></td>
    <td><%= task.status %></td>
    <td><%= link_to '詳細', task_path(task.id) %>
    <td><%= link_to '編集', edit_task_path(task.id) %></td>
    <td><%= link_to '削除', task_path(task.id), method: :delete, data: { confirm: '本当に削除していいですか？ '} %></td>
  <tr>
<% end %>
</table>

<%= link_to '新規タスク', new_task_path %>
